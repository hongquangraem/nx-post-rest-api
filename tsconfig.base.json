{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@post-rest-api/user": ["libs/api/user/src/index.ts"],
      "@post-rest-api/post": ["libs/api/post/src/index.ts"],
      "@post-rest-api/comment": ["libs/api/comment/src/index.ts"],
      "@post-rest-api/common": ["libs/api/common/src/index.ts"],
      "@post-rest-api/types": ["libs/api/types/src/index.ts"],
      "@post-rest-api/dtos": ["libs/api/dtos/src/index.ts"],
      "@post-rest-api/mappings": ["libs/api/mappings/src/index.ts"],
      "@post-rest-api/auth": ["libs/api/auth/src/index.ts"],
      "@post-rest-api/config": ["libs/api/config/src/index.ts"],
      "@post-rest-api/configurations": ["libs/api/configurations/src/index.ts"],
      "@post-rest-api/security": ["libs/api/security/src/index.ts"],
      "@post-rest-api/models": ["libs/api/models/src/index.ts"],
      "@post-rest-web/api-stub": ["libs/web/api-stub/src/index.ts"],
      "@post-rest-web/shell": ["libs/web/shell/src/index.ts"],
      "@post-rest-web/auth": ["libs/web/auth/src/index.ts"],
      "@post-rest-web/global-states": ["libs/web/global-states/src/index.ts"],
      "@post-rest-web/post": ["libs/web/post/src/index.ts"],
      "@post-rest-web/utilities": ["libs/web/utilities/src/index.ts"],
      "@post-rest-web/types": ["libs/web/types/src/index.ts"],
      "@post-rest-web/shared/item-header": [
        "libs/web/shared/item-header/src/index.ts"
      ],
      "@post-rest-web/shared/textarea-control": [
        "libs/web/shared/textarea-control/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
